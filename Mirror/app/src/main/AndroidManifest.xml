<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dllo.mirror">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".mian.MirrorApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mian.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".details.DetailsActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.RegisterActivity" />
        <activity android:name=".details.Type2DetailsActivity" />
        <activity android:name=".wearpicture.WearPictureActivity" />
        <activity android:name=".wearpicture.ScaleActivity" />
        <activity android:name=".buy.activity.BuyDetailsActivity" />
        <activity android:name=".buy.activity.MyAddressActivity" />
        <activity android:name=".buy.activity.AddAddressActivity" />

        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />
    </application>

</manifest>

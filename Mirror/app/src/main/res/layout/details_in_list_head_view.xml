<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/details_in_list_head_view_back_rlayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#33000000">

        <RelativeLayout
            android:id="@+id/details_in_list_head_view_back_rlayout_two"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_frame">

            <TextView
                android:id="@+id/details_in_list_head_view_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="goodsName"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/details_in_list_head_view_line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_in_list_head_view_goods_name"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/title_line" />

            <TextView
                android:id="@+id/details_in_list_head_view_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_in_list_head_view_line_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="brand"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/details_in_list_head_view_line_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_in_list_head_view_brand"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/title_line" />

            <TextView
                android:id="@+id/details_in_list_head_view_info_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/details_in_list_head_view_line_one"
                android:layout_alignRight="@id/details_in_list_head_view_line_one"
                android:layout_below="@id/details_in_list_head_view_line_two"
                android:layout_marginTop="30dp"
                android:text="info_des"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/money_flag_white" />

                <TextView
                    android:id="@+id/details_in_list_head_view_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="goods_price"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="滑动浏览详情"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/pulldown_arrow" />

        <ImageView
            android:id="@+id/details_in_list_head_view_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/details_in_list_head_view_back_rlayout_two"
            android:layout_alignRight="@+id/details_in_list_head_view_back_rlayout_two"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/share" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="#00000000" />

    <TextView
        android:id="@+id/details_in_list_head_view_brand_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="brand"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/login_line" />


</com.zhy.autolayout.AutoLinearLayout>